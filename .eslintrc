{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "Babel": true
  },
  "plugins": [
    "html",
  ],
  "rules": {
    "global-require": "off",
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "no-new-func": "off",
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    # 新添加规则
    "indent": ["error", 4],
    "no-tabs": "off",
    "comma-dangle": "off",
    "no-new": "off",
    "no-shadow": "off",
    "max-len": "off",
    'import/no-named-as-default': off,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
